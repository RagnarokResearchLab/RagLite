{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "outDir": "./tsbuild",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "declaration": true,
    "incremental": true,
    "removeComments": true,
    "noEmit": true,
    "declarationDir": "./tsbuild/declarations",
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*.d.ts"]
}
